.sidebar.border.border-right.col-md-3.col-lg-2.p-0.bg-body-tertiary
  #sidebarMenu.offcanvas-md.offcanvas-end.bg-body-tertiary{"aria-labelledby" => "sidebarMenuLabel", tabindex: "-1"}
    .offcanvas-header
      %h5#sidebarMenuLabel.offcanvas-title CodEventos
      %button.btn-close{"aria-label" => "Close", "data-bs-dismiss" => "offcanvas", "data-bs-target" => "#sidebarMenu", type: "button"}
    .offcanvas-body.d-md-flex.flex-column.p-0.pt-lg-3.overflow-y-auto
      %ul.nav.flex-column
        %li.nav-item
          %a.nav-link.d-flex.align-items-center.gap-2{href: admin_root_path}
            %i.bi.bi-house-fill
            Dashboard
        
        %li.nav-item
          %a.nav-link.d-flex.align-items-center.gap-2{href: admin_events_path}
            %i.bi.bi-calendar-event-fill
            Events
        
        %li.nav-item
          %a.nav-link.d-flex.align-items-center.gap-2{href: admin_assistants_path}
            %i.bi.bi-people-fill
            Assistants
      
      %hr.my-3
      .px-3
        .d-flex.align-items-center.gap-2.mb-2
          %i.bi.bi-person-circle
          %small.text-muted= current_admin_user&.name
        = button_to admin_logout_path, method: :delete, class: 'btn btn-outline-danger btn-sm w-100' do
          %i.bi.bi-box-arrow-right.me-2
          Logout